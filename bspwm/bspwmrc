#!/bin/sh

bspc monitor -d {1..9}
bspc config window_gap 3
bspc config border_width 1
bspc config focus_follows_pointer true
bspc config normal_border_color "#bd93f9"
bspc config focused_border_color "#21222c"

xrdb "$XRESOURCES" &
pidof -q sxhkd || sxhkd &
pidof -q polybar || polybar -r &
xsetroot -cursor_name left_ptr &
redshift -PO 3700 > /dev/null 2>&1 &
feh --bg-scale --no-fehbg /usr/share/backgrounds/archlinux/lone.jpg &

<?xml version="1.0"?>
<openbox_config>
    <theme>
        <icon>Arc</icon>
        <name>Arc-Clone</name>
        <animateIconify>no</animateIconify>
        <font place="ActiveWindow">
            <size>10</size>
        </font>
        <font place="InactiveWindow">
            <size>10</size>
        </font>
        <font place="ActiveOnScreenDisplay">
            <size>10</size>
        </font>
        <font place="InactiveOnScreenDisplay">
            <size>10</size>
        </font>
        <font place="MenuItem">
            <size>10</size>
        </font>
    </theme>
    <placement>
        <center>yes</center>
    </placement>
    <desktops>
        <number>0</number>
    </desktops>
    <mouse>
        <context name="Client">
            <mousebind button="Left" action="Press">
                <action name="Focus"/>
                <action name="Raise"/>
            </mousebind>
            <mousebind button="Right" action="Press">
                <action name="Focus"/>
                <action name="Raise"/>
            </mousebind>
            <mousebind button="W-Left" action="Press">
                <action name="Move"/>
                <action name="Unmaximize"/>
            </mousebind>
            <mousebind button="W-Right" action="Press">
                <action name="Resize"/>
            </mousebind>
        </context>
        <context name="Icon">
            <mousebind button="Left" action="Click">
                <action name="ShowMenu">
                    <menu>client-menu</menu>
                </action>
            </mousebind>
        </context>
        <context name="Titlebar">
            <mousebind button="Left" action="Drag">
                <action name="Move"/>
            </mousebind>
            <mousebind button="Right" action="Click">
                <action name="ShowMenu">
                    <menu>client-menu</menu>
                </action>
            </mousebind>
            <mousebind button="Left" action="DoubleClick">
                <action name="ToggleMaximize"/>
            </mousebind>
            <mousebind button="Left" action="Click">
                <action name="Focus"/>
            </mousebind>
        </context>
        <context name="Iconify">
            <mousebind button="Left" action="Click">
                <action name="Iconify"/>
            </mousebind>
        </context>
        <context name="Maximize">
            <mousebind button="Left" action="Click">
                <action name="ToggleMaximize"/>
            </mousebind>
        </context>
        <context name="Close">
            <mousebind button="Left" action="Click">
                <action name="Close"/>
            </mousebind>
        </context>
    </mouse>
    <keyboard>
        <keybind key="W-S-q">
            <action name="Exit"/>
        </keybind>
        <keybind key="W-c">
            <action name="Close"/>
        </keybind>
        <keybind key="W-d">
            <action name="Iconify"/>
        </keybind>
        <keybind key="A-Tab">
            <action name="NextWindow">
                <bar>no</bar>
                <raise>yes</raise>
            </action>
        </keybind>
        <keybind key="W-Down">
            <action name="Unmaximize"/>
        </keybind>
        <keybind key="W-S-r">
            <action name="Reconfigure"/>
        </keybind>
        <keybind key="W-Up">
            <action name="ToggleMaximize"/>
        </keybind>
        <keybind key="W-F11">
            <action name="ToggleFullscreen"/>
        </keybind>
        <keybind key="W-Return">
            <action name="Execute">
                <command>alacritty</command>
            </action>
        </keybind>
        <keybind key="XF86AudioRaiseVolume">
            <action name="Execute">
                <command>amixer set Master 5%+</command>
            </action>
        </keybind>
        <keybind key="XF86AudioLowerVolume">
            <action name="Execute">
                <command>amixer set Master 5%-</command>
            </action>
        </keybind>
        <keybind key="XF86AudioMute">
            <action name="Execute">
                <command>amixer set Master toggle</command>
            </action>
        </keybind>
        <keybind key="XF86HomePage">
            <action name="Execute">
                <command>brave</command>
            </action>
        </keybind>
        <keybind key="W-l">
            <action name="Execute">
                <command>rofi -show drun</command>
            </action>
        </keybind>
        <keybind key="Menu">
            <action name="ShowMenu">
                <menu>client-menu</menu>
            </action>
        </keybind>
        <keybind key="W-Left">
            <action name="Unmaximize"/>
            <action name="MoveResizeTo">
                <x>0</x>
                <y>0</y>
                <width>50%</width>
                <height>100%</height>
            </action>
        </keybind>
        <keybind key="W-Right">
            <action name="Unmaximize"/>
            <action name="MoveResizeTo">
                <y>0</y>
                <x>-0</x>
                <width>50%</width>
                <height>100%</height>
            </action>
        </keybind>
    </keyboard>
</openbox_config>

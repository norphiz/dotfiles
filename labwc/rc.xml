<?xml version="1.0" encoding="UTF-8"?>
<labwc_config>
    <theme cornerRadius="0"/>
    <libinput>
        <device category="non-touch" accelProfile="flat"/>
    </libinput>
    <mouse>
        <default/>
        <context name="Desktop">
            <mousebind button="Left" action="Press">
                <action name="None"/>
            </mousebind>
            <mousebind button="Right" action="Press">
                <action name="None"/>
            </mousebind>
        </context>
    </mouse>
    <keyboard numlock="off">
        <keybind key="W-c"><action name="Close"/></keybind>
        <keybind key="W-S-q"><action name="Exit"/></keybind>
        <keybind key="W-d"><action name="Iconify"/></keybind>
        <keybind key="A-Tab"><action name="NextWindow"/></keybind>
        <keybind key="W-S-r"><action name="Reconfigure"/></keybind>
        <keybind key="W-Up"><action name="ToggleMaximize"/></keybind>
        <keybind key="W-F11"><action name="ToggleFullscreen"/></keybind>
        <keybind key="W-l"><action name="Execute" command="wofi"/></keybind>
        <keybind key="W-Return"><action name="Execute" command="foot -m"/></keybind>
        <keybind key="W-Left"><action name="SnapToEdge" direction="left"/></keybind>
        <keybind key="W-Right"><action name="SnapToEdge" direction="right"/></keybind>
        <keybind key="XF86_HomePage"><action name="Execute" command="firefox"/></keybind>
        <keybind key="XF86_AudioMute"><action name="Execute" command="amixer set Master toggle"/></keybind>
        <keybind key="XF86_AudioRaiseVolume"><action name="Execute" command="amixer set Master 5%+"/></keybind>
        <keybind key="XF86_AudioLowerVolume"><action name="Execute" command="amixer set Master 5%-"/></keybind>
    </keyboard>
</labwc_config>

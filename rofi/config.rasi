@theme "/dev/null"

* {
    color: #f8f8f2;
    border-color: #bd93f9;
    background-color: #282a36;
}

listview {
    lines: 10;
}

inputbar {
    enabled: false;
}

mainbox {
    border: 1;
    padding: 5;
}

configuration {
    show-icons: true;
    font: "sans-serif 14";
    disable-history: true;
    drun-display-format: "{name}";
}

element.selected {
    color: @background-color;
    background-color: @border-color;
}

element-text, element-icon {
    size: 64;
    color: inherit;
    vertical-align: 0.5;
    background-color: inherit;
}
